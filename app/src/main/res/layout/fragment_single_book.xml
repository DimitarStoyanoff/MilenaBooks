<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="20dp">


    <ImageView
        android:layout_height="230dp"
        android:id="@+id/upload_book_image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_book_author"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/single_book_name"
        android:layout_alignLeft="@+id/single_book_name"
        android:layout_alignStart="@+id/single_book_name"
        android:textStyle="italic"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_book_price"
        android:layout_below="@+id/single_book_name"
        android:layout_alignLeft="@+id/single_book_name"
        android:layout_alignStart="@+id/single_book_name"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/single_book_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/upload_book_image"
        android:layout_toRightOf="@+id/upload_book_image"
        android:layout_toEndOf="@+id/upload_book_image"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="20dp"
        android:textStyle="normal|bold"
        android:layout_marginRight="10dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_book_rating_bar"
        android:layout_alignBottom="@+id/single_book_price"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>